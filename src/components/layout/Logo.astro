---
interface Props {
  size?: "small" | "large";
  class?: string;
}

const { size = "large", class: className = "" } = Astro.props;

const sizeClasses = {
  small: "text-2xl",
  large: "text-6xl md:text-7xl",
};

const translateClasses = {
  small: "translate-y-0.5",
  large: "translate-y-1",
};
---

<span
  class:list={[
    "font-display font-semibold tracking-wider text-brand-500 dark:text-brand-400",
    sizeClasses[size],
    className,
  ]}
>
  [<span class:list={["inline-block", translateClasses[size]]}>ST</span>]
</span>
